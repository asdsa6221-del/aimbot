--// =========================
--// Developer ESP (Minimal UI)
--// =========================

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ESP_ENABLED = true

--// =========================
--// Create Minimal Menu
--// =========================

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DevESPGui"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Frame Container
local MenuFrame = Instance.new("Frame")
MenuFrame.Size = UDim2.new(0, 200, 0, 100)
MenuFrame.Position = UDim2.new(0, 20, 0, 200)
MenuFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MenuFrame.BorderSizePixel = 0
MenuFrame.Parent = ScreenGui

-- "Made by Adam" Label
local MadeByLabel = Instance.new("TextLabel")
MadeByLabel.Size = UDim2.new(1, 0, 0, 30)
MadeByLabel.Position = UDim2.new(0, 0, 0, 0)
MadeByLabel.BackgroundTransparency = 1
MadeByLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
MadeByLabel.Font = Enum.Font.GothamBold
MadeByLabel.TextSize = 18
MadeByLabel.Text = "Made by Adam"
MadeByLabel.Parent = MenuFrame

-- ESP Toggle Button
local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(1, 0, 0, 50)
ToggleButton.Position = UDim2.new(0, 0, 0, 40)
ToggleButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
ToggleButton.BorderSizePixel = 0
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextSize = 18
ToggleButton.Text = "ESP: ON"
ToggleButton.Parent = MenuFrame

ToggleButton.MouseButton1Click:Connect(function()
    ESP_ENABLED = not ESP_ENABLED
    ToggleButton.Text = "ESP: " .. (ESP_ENABLED and "ON" or "OFF")
    
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr.Character then
            local esp = plr.Character:FindFirstChild("DevESP")
            if esp then
                esp.Enabled = ESP_ENABLED
            end
        end
    end
end)

--// =========================
--// ESP Creation Function
--// =========================

local function createESP(character)
    if character:FindFirstChild("DevESP") then return end

    local hl = Instance.new("Highlight")
    hl.Name = "DevESP"
    hl.FillColor = Color3.fromRGB(255, 0, 0)
    hl.OutlineColor = Color3.fromRGB(255, 0, 0)
    hl.FillTransparency = 0.7
    hl.Enabled = ESP_ENABLED
    hl.Parent = character
end

--// Apply ESP to a player
local function setupPlayer(player)
    player.CharacterAdded:Connect(function(char)
        char:WaitForChild("HumanoidRootPart", 5)
        createESP(char)
    end)

    if player.Character then
        createESP(player.Character)
    end
end

-- Listen for players joining
Players.PlayerAdded:Connect(setupPlayer)

-- Apply to existing players
for _, plr in ipairs(Players:GetPlayers()) do
    setupPlayer(plr)
end

print("Minimal Developer ESP Loaded âœ”")
